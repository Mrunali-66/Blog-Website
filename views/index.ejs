<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Blog</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>My Blog</h1>
            <a href="/create" class="btn btn-primary">Create New Post</a>
        </header>

        <main>
            <% if (posts.length === 0) { %>
                <p class="no-posts">No posts yet. Create your first post!</p>
            <% } else { %>
                <div class="posts-grid">
                    <% posts.forEach(post => { %>
                        <div class="post-card">
                            <h2><%= post.title %></h2>
                            <p><%= post.content.substring(0, 100) %>...</p>
                            <div class="post-actions">
                                <a href="/edit/<%= post.id %>" class="btn btn-edit">Edit</a>
                                <form action="/delete/<%= post.id %>" method="POST" class="delete-form">
                                    <button type="submit" class="btn btn-delete">Delete</button>
                                </form>
                            </div>
                            <small class="post-date">
                                <%= post.createdAt.toLocaleString() %>
                            </small>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </main>
    </div>
</body>
</html>